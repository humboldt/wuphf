<div class="container mt-2" id="demo">
  <%= form_for @demo_wuphf do |f| %>
    <div class="form-group">
      <label for="demo_wuphf_from"><i class="fa fa-id-badge"></i> Your Name</label>
      <%= f.text_field :from, class: "form-control", placeholder: "Your Name", required: true %>
    </div>

    <div class="form-group">
      <label for="demo_wuphf_to"><i class="fa fa-paper-plane"></i> Recipient Name</label>
      <%= f.text_field :to, class: "form-control", placeholder: "Recipient Name", required: true %>
    </div>

    <div class="form-group">
      <label for="demo_wuphf_email"><i class="fa fa-envelope"></i> Email</label>
      <%= f.email_field :email, class: "form-control", placeholder: "bark@example.com", required: true %>
    </div>

    <div class="form-group">
      <label for="demo_wuphf_phone"><i class="fa fa-phone"></i> Phone</label>
      <%= f.text_field :phone, class: "form-control", placeholder: "xxx-xxx-xxxx", maxlength: 12, required: true, pattern: '^\d{3}-\d{3}-\d{4}$' %>
    </div>

    <div class="form-group">
      <label for="demo_wuphf_twitter_handle"><i class="fa fa-twitter"></i> Twitter</label>
      <div class="input-group">
        <div class="input-group-addon">@</div>
        <%= f.text_field :twitter_handle, class: "form-control", placeholder: "username", required: true %>
      </div>
    </div>

    <div class="form-group">
      <label for="demo_wuphf_message"><i class="fa fa-commenting"></i> Message</label>
      <%= f.text_area :message, class: "form-control", maxlength: 140, required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Wuphf!", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
