<%= form_for @message do |f| %>
  <div class="form-group">
    <select id="select-recipient" name="message[recipient_id]" placeholder="WUPHF someone from your Dog Pack" class="form-control form-control-lg form-pill">
      <option value="">WUPHF someone from your Dog Pack</option>
      <% @recipients.each do |recipient| %>
        <option value="<%= recipient.id %>"><%= recipient.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.text_area :content, placeholder: "Start Typing... (140 Character Limit)", class: "form-control form-control-lg textarea-pill", maxlength: 140, rows: 4, required: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Send!", class: "btn btn-lg btn-primary form-pill" %>
  </div>
<% end %>
