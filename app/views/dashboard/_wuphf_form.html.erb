<%= form_for @message do |f| %>
  <div class="form-group">
    <select id="select-recipient" name="message[recipient_id]" placeholder="Send a Wuphf" class="form-control form-control-lg form-pill" required>
      <option value="">Send a Wuphf</option>
      <% @recipients.each do |recipient| %>
        <option value="<%= recipient.id %>"><%= recipient.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.text_area :content, placeholder: "Message (140 Characters)", class: "form-control form-control-lg", maxlength: 140, rows: 4, required: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Send!", class: "btn btn-block btn-lg text-white bg-purple form-pill" %>
  </div>
<% end %>
