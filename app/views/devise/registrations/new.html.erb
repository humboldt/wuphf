<div class="container p-4">
  <div class="col-lg-6 offset-lg-3 p-4">
    <h2 class="text-center text-orange pb-2">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control form-control-lg form-pill" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email", class: "form-control form-control-lg form-pill" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control form-control-lg form-pill" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control form-control-lg form-pill" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-block btn-lg btn-outline-primary btn-pill" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<hr>
