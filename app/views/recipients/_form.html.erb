<%= form_for @recipient do |f| %>
  <div class="form-group">
    <span class="text-orange text-bold">*</span> <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <span class="text-orange text-bold">*</span> <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <span class="text-orange text-bold">*</span> <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :twitter_handle, "Twitter Handle (Don't include the @ symbol)" %>
    <%= f.text_field :twitter_handle, class: "form-control" %>
  </div>
  <!--
  <div class="form-group">
    <%= f.label :facebook_id %>
    <%= f.text_field :facebook_id, class: "form-control" %>
  </div>
  -->
  <div class="form-group">
    <span class="text-orange">* denotes a required field</span>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-outline-primary" %>
  </div>
<% end %>

<%= link_to 'Back', :back %>
