<% present recipient do |recipient_presenter| %>

  <div class="col-xl-6">
    <div class="card card-inverse bg-purple mb-3 btn-pill p-4">
      <h5 class="text-bold text-white text-center"><%= recipient_presenter.name %>
        <small>
          <%= link_to "(Edit)", edit_recipient_path(recipient), class: "text-white" %>
        </small>
      </h5>

      <div><%= recipient_presenter.email %></div>

      <div><%= recipient_presenter.phone %></div>

      <div><%= recipient_presenter.twitter_handle %></div>
    </div>
  </div>

<% end %>
